PageLayout:
    BoxLayout:
        orientation: 'horizontal'
        pos_hint: {'x': 0, 'y': app.get_height() // 2}
        Label:
            id:horas
            text: f"Tempo: {app.get_date()}"
            size_hint: .2, .3 
            
        Button:
            id:pause
            text:'Pause'
            size_hint: .2, .3 
            on_press: app.button_callback()
